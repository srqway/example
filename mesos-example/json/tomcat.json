{
  "id": "/tomcat",
  "cmd": "cd apache-tomcat-* && sed \"s/8080/1234/g\" < ./conf/server.xml > ./conf/server-mesos.xml && ./bin/catalina.sh run -config ./conf/server-mesos.xml",
  "cpus": 1,
  "mem": 512,
  "disk": 1024,
  "instances": 1,
  "acceptedResourceRoles": ["*"],
  "portDefinitions": [
    {
      "port": 10000,
      "name": "default",
      "protocol": "tcp"
    }
  ],
  "fetch": [
    {
      "uri": "https://archive.apache.org/dist/tomcat/tomcat-7/v7.0.73/bin/apache-tomcat-7.0.73.tar.gz",
      "extract": true,
      "executable": false,
      "cache": false
    }
  ]
}
